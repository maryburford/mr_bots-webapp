<div class="row">
  <div class="col-xs-12">
    <h2>Create Campaign</h2>
    <br>
    <div class="panel panel-default">
      <div class="panel-heading">
	<h3 class="panel-title">New Campaign</h3>
      </div>
      <div class="panel-body">
	<form action="/campaign/create" method="post">
            <% if flash[:errors] then %>
            <p>Errors:</p>
	    <% flash[:errors].each do |error| %>
               <%= error %>
	    <% end %>
            <% end %>
	  <div class="form-group" >
	    <label for="target">Target</label>
	    <input type="text" class="form-control" id="target" name="target" placeholder="sbarrochica">
	  </div>
	  <div class="form-group">
	    <label for="engagement-type">Engagement Type</label>
            <select class="form-control" id="engagement-type" name="engagement_type">
               <option>Favorite</option>
            </select>
	  </div>
	  <div class="form-group">
	    <label for="engagement-level">Engagements Per Day</label>
	    <input type="text" class="form-control" name="engagements_per_day" placeholder="30">
	  </div>
	  <div class="form-group">
	    <label for="engagement-level">Engagments Per Prey</label>
	    <input type="text" class="form-control" name="engagements_per_prey" placeholder="1">
	  </div>
	  <div>
	  <input type="hidden" name="account_id" value= "<%= Account.find(current_account).id %>">
	  </div>
	  <button type="submit" class="btn btn-twitter">Start Campaign</button>
	</form>
      </div>
    </div>
  </div>
</div>
